# Cloudflare Pages Configuration Template
# Copy this to wrangler.toml and fill in your values
# NEVER commit wrangler.toml to version control

name = "gitdiscover-web"
compatibility_date = "2024-01-01"

# Account ID should be set via environment variable CLOUDFLARE_ACCOUNT_ID
# account_id = "your-account-id-here"

pages_build_output_dir = "apps/web/.next"

[env.production]
name = "gitdiscover-web"
routes = [
  { pattern = "gitdiscover.org", custom_domain = true },
  { pattern = "www.gitdiscover.org", custom_domain = true }
]

[env.production.vars]
NODE_ENV = "production"
NEXT_PUBLIC_APP_URL = "https://gitdiscover.org"
NEXT_PUBLIC_API_URL = "https://api.gitdiscover.org"
NEXT_PUBLIC_API_BASE_URL = "https://api.gitdiscover.org/v1"
