{
  "name": "gitdiscover",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm run dev -w @gitdiscover/api\" \"npm run dev -w @gitdiscover/web\"",
    "dev:api": "npm run dev -w @gitdiscover/api",
    "dev:web": "npm run dev -w @gitdiscover/web",
    "dev:collector": "npm run dev -w @gitdiscover/collector",
    "build": "npm run build -ws --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run lint -ws --if-present",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prisma:generate": "prisma generate --schema apps/api/prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema apps/api/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema apps/api/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema apps/api/prisma/schema.prisma",
    "db:seed": "tsx apps/api/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.13.16",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  }
}
