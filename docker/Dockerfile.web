FROM node:20-bookworm-slim AS builder

WORKDIR /app

# Install deps (workspace-aware)
COPY package.json package-lock.json tsconfig.base.json ./
COPY apps/web/package.json apps/web/package.json
COPY apps/api/package.json apps/api/package.json
COPY packages/shared/package.json packages/shared/package.json
COPY packages/ui/package.json packages/ui/package.json
COPY packages/config/package.json packages/config/package.json
COPY services/collector/package.json services/collector/package.json

RUN npm ci

# Copy source and build shared package first
COPY packages/shared packages/shared
COPY packages/ui packages/ui
COPY apps/api/prisma apps/api/prisma

RUN npm run prisma:generate
RUN npm run build -w @gitdiscover/shared
RUN npm run build -w @gitdiscover/ui

# Copy and build web app
COPY apps/web apps/web
RUN npm run build -w @gitdiscover/web

# Prune dev deps for a smaller runtime image
RUN npm prune --omit=dev

FROM node:20-bookworm-slim AS runner

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r appgroup && useradd -r -g appgroup appuser

ENV NODE_ENV=production
WORKDIR /app/apps/web

COPY --from=builder /app/node_modules /app/node_modules
COPY --from=builder /app/packages/shared/dist /app/packages/shared/dist
COPY --from=builder /app/packages/shared/package.json /app/packages/shared/package.json
COPY --from=builder /app/packages/ui/dist /app/packages/ui/dist
COPY --from=builder /app/packages/ui/package.json /app/packages/ui/package.json
COPY --from=builder /app/apps/web/.next ./.next
COPY --from=builder /app/apps/web/package.json ./package.json
COPY --from=builder /app/apps/web/next.config.* ./

# Set ownership to non-root user
RUN chown -R appuser:appgroup /app

USER appuser

EXPOSE 3002

HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3002/ || exit 1

CMD ["npm", "run", "start"]
